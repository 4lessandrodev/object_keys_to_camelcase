{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "lib": [
            "es2019"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
		"strict": true,
		"sourceRoot": "src",
		"moduleResolution": "node",
		"resolveJsonModule": true
    },
	"include": ["src/**/*"],
    "exclude": [
        "/**/*.spec.ts",
        "/*.spec.ts",
    ]
}